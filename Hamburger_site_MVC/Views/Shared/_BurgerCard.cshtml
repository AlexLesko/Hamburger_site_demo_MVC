@model Burger

<div class="col-md-4 col-lg-3 burgerCard">
    <img src="@Model.ImageUrl" alt="@Model.ImageAlt" />
    <h1>
        <a asp-controller="Burger"
           asp-action="BurgerDetail"
           asp-route-id="@Model.BurgerId">@Model.Name</a>
    </h1>
    <p>@Model.Description</p>
    <h2>@Model.Price.ToString("c")</h2>
    <div class="addToCart">
        <p class="button">
            <a class="btn btn-primary"
               asp-controller="ShoppingCart"
               asp-action="AddToShoppingCart"
               asp-route-burgerId="@Model.BurgerId">Add to cart</a>
        </p>
    </div>
</div>