@model ShoppingCartViewModel

@if (Model.ShoppingCart.ShoppingCartItems.Count > 0)
{
    <li style="margin:5px; align-content:center" class="nav-item shopping_cart">
        <a style="text-decoration: none;" asp-controller="ShoppingCart" asp-action="Index">
            <i class="fa fa-shopping-cart fa-2x"></i>
            <span id="cart-status">
                @Model.ShoppingCart.ShoppingCartItems.Count
            </span>
        </a>
    </li>
}